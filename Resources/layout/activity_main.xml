<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="5"
    android:columnCount="3"
    android:background="@mipmap/background">
    <TextView
        android:text=""
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView1"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="14sp" 
         />
    <TextView
        android:text=""
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView2"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="14sp" 
        />
     <TextView
        android:text=""
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView4"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="14sp" 
        />
    <TextView
		android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:contentDescription=""
        android:textColor="@android:color/white"
        android:id="@+id/textView5"
        android:layout_row="2"
        android:layout_column="0"
		android:layout_columnSpan="2"
		android:layout_width="150dp"
		android:layout_height="30dp"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="50dp"
		android:layout_marginRight="50dp"
		android:textSize="14sp" 
		/>
   
    <Button
        android:onClick=""
        android:text="Potion"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/btnpotion"
        android:backgroundTint="#ff349309"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:text="Magic Item"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/btnmagicitem"
        android:backgroundTint="#ff0095ad"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp" 
        />
    <Button
        android:text="Race"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/btnrace"
        android:backgroundTint="#ff825b0c"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <Button
        android:text="Carouse"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/btncarousing"
        android:backgroundTint="#ff8e0000"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" 
         />

    <ScrollView
        android:layout_row="3"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:layout_columnSpan="3"
        android:layout_width="320dp"
        android:layout_height="115dp"
        android:layout_below="@id/textView3"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#ff616161"
        android:fadingEdge="none"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:id="@+id/textView3"
            android:scrollbars="vertical"
            />
    </ScrollView>
</GridLayout>

